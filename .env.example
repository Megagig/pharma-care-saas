# PharmaPilot SaaS Settings Module - Environment Configuration Template
# Copy this file to .env.production, .env.staging, or .env.local and update values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3000
APP_NAME="PharmaPilot SaaS Settings"
APP_VERSION=1.0.0
APP_URL=https://admin.PharmaPilot.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database URL
DATABASE_URL=postgresql://PharmaPilot_user:your_secure_password@localhost:5432/PharmaPilot_production

# Database Connection Pool Settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20
DATABASE_TIMEOUT=30000

# Database Credentials (alternative to DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=PharmaPilot_production
DB_USER=PharmaPilot_user
DB_PASSWORD=your_secure_password

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis Connection URL
REDIS_URL=redis://:your_redis_password@localhost:6379

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_PREFIX=PharmaPilot:saas:
REDIS_DB=0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Configuration
JWT_SECRET=your_very_long_jwt_secret_minimum_64_characters_recommended_for_security
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your_very_long_session_secret_minimum_64_characters_recommended
SESSION_MAX_AGE=86400000

# Password Hashing
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=https://app.PharmaPilot.com,https://admin.PharmaPilot.com
CORS_CREDENTIALS=true

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# API Rate Limiting
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=1000

# Authentication Rate Limiting
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/csv
UPLOAD_DESTINATION=/var/lib/PharmaPilot/uploads
UPLOAD_TEMP_DIR=/var/lib/PharmaPilot/temp

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key

# Email Settings
EMAIL_FROM=noreply@PharmaPilot.com
EMAIL_FROM_NAME="PharmaPilot System"
EMAIL_REPLY_TO=support@PharmaPilot.com

# =============================================================================
# SMS CONFIGURATION (OPTIONAL)
# =============================================================================
# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# PAYMENT GATEWAY CONFIGURATION
# =============================================================================
# Nomba Payment Gateway
NOMBA_API_URL=https://api.nomba.com/v1
NOMBA_MERCHANT_ID=your_merchant_id
NOMBA_API_KEY=your_nomba_api_key
NOMBA_WEBHOOK_SECRET=your_webhook_secret
NOMBA_ENVIRONMENT=production

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/PharmaPilot/saas-settings.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# DataDog Monitoring
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key
DATADOG_SERVICE_NAME=PharmaPilot-saas-settings
DATADOG_ENV=production

# Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=1.0.0

# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9464

# =============================================================================
# FEATURE FLAGS CONFIGURATION
# =============================================================================
FEATURE_FLAGS_CACHE_TTL=300
FEATURE_FLAGS_EVALUATION_TIMEOUT=100
FEATURE_FLAGS_DEFAULT_ENABLED=false

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================
ANALYTICS_ENABLED=true
ANALYTICS_BATCH_SIZE=1000
ANALYTICS_FLUSH_INTERVAL=30000
ANALYTICS_RETENTION_DAYS=365

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Notification Settings
NOTIFICATIONS_ENABLED=true
NOTIFICATIONS_BATCH_SIZE=100
NOTIFICATIONS_RETRY_ATTEMPTS=3
NOTIFICATIONS_RETRY_DELAY=5000

# Push Notifications (Firebase)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY_ID=your_firebase_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_firebase_private_key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_CLIENT_ID=your_firebase_client_id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=5000
WEBHOOK_MAX_PAYLOAD_SIZE=1048576

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_TTL_DEFAULT=3600
CACHE_TTL_USER_SESSION=1800
CACHE_TTL_FEATURE_FLAGS=300
CACHE_TTL_ANALYTICS=600

# =============================================================================
# SECURITY HEADERS CONFIGURATION
# =============================================================================
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_HSTS_INCLUDE_SUBDOMAINS=true
SECURITY_HSTS_PRELOAD=true
SECURITY_CONTENT_TYPE_NOSNIFF=true
SECURITY_FRAME_OPTIONS=DENY
SECURITY_XSS_PROTECTION=true

# =============================================================================
# API DOCUMENTATION CONFIGURATION
# =============================================================================
API_DOCS_ENABLED=true
API_DOCS_PATH=/api-docs
API_DOCS_TITLE="PharmaPilot SaaS Settings API"
API_DOCS_VERSION=1.0.0

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================
HEALTH_CHECK_URL=http://localhost:3000/health
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_VERBOSE=false

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=PharmaPilot-backups
BACKUP_S3_REGION=us-east-1

# =============================================================================
# AWS CONFIGURATION (IF USING AWS SERVICES)
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=PharmaPilot-uploads

# =============================================================================
# DEVELOPMENT/TESTING CONFIGURATION
# =============================================================================
# Only used in development/testing environments
DEBUG=PharmaPilot:*
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/PharmaPilot_test
MOCK_EXTERNAL_SERVICES=false

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Docker-specific environment variables
DOCKER_REGISTRY=registry.PharmaPilot.com
DOCKER_IMAGE_TAG=latest
DOCKER_NETWORK=PharmaPilot-network

# =============================================================================
# LOAD BALANCER CONFIGURATION
# =============================================================================
TRUST_PROXY=true
PROXY_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Node.js Performance Settings
NODE_OPTIONS=--max-old-space-size=1024
UV_THREADPOOL_SIZE=4

# Application Performance
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000
GRACEFUL_SHUTDOWN_TIMEOUT=10000

# =============================================================================
# COMPLIANCE CONFIGURATION
# =============================================================================
DATA_RETENTION_DAYS=2555
AUDIT_LOG_RETENTION_DAYS=2555
GDPR_COMPLIANCE_ENABLED=true
HIPAA_COMPLIANCE_ENABLED=true

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Slack Integration (for notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
SLACK_CHANNEL=#alerts

# Microsoft Teams Integration
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/your/teams/webhook

# =============================================================================
# MAINTENANCE MODE
# =============================================================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is currently under maintenance. Please try again later."
MAINTENANCE_ALLOWED_IPS=127.0.0.1,::1