# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/pharmacare-saas

# Frontend URL
FRONTEND_URL=http://localhost:5173

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-here
JWT_REFRESH_EXPIRE=30d

# Email Configuration (Optional - for email services)
EMAIL_FROM=noreply@pharmacare.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Nomba Payment Gateway Configuration (Optional)
# Get these from https://developer.nomba.com/
NOMBA_CLIENT_ID=your-nomba-client-id
NOMBA_PRIVATE_KEY=your-nomba-private-key
NOMBA_ACCOUNT_ID=your-nomba-account-id
NOMBA_WEBHOOK_SECRET=your-nomba-webhook-secret

# File Upload Configuration
MAX_FILE_SIZE=5000000
UPLOAD_PATH=./uploads

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-key

# Twilio SMS Configuration (Optional - for SMS notifications)
# Get these from https://console.twilio.com/
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
