# Clinical Notes Module Environment Configuration
# Copy this file to .env and update the values for your environment

# ================================
# Clinical Notes Configuration
# ================================

# Enable/disable clinical notes module
CLINICAL_NOTES_ENABLED=true

# File upload configuration
CLINICAL_NOTES_MAX_FILE_SIZE=10485760  # 10MB in bytes
CLINICAL_NOTES_MAX_FILES_PER_NOTE=5
CLINICAL_NOTES_ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png,gif,bmp,xls,xlsx,csv

# File storage configuration
CLINICAL_NOTES_STORAGE_TYPE=local  # Options: local, s3, azure, gcp
CLINICAL_NOTES_UPLOAD_PATH=./uploads/clinical-notes
CLINICAL_NOTES_TEMP_PATH=./temp/clinical-notes

# AWS S3 Configuration (if using S3 storage)
CLINICAL_NOTES_S3_BUCKET=your-clinical-notes-bucket
CLINICAL_NOTES_S3_REGION=us-east-1
CLINICAL_NOTES_S3_ACCESS_KEY_ID=your-access-key
CLINICAL_NOTES_S3_SECRET_ACCESS_KEY=your-secret-key
CLINICAL_NOTES_S3_ENDPOINT=  # Optional: for S3-compatible services

# Azure Blob Storage Configuration (if using Azure)
CLINICAL_NOTES_AZURE_ACCOUNT_NAME=your-account-name
CLINICAL_NOTES_AZURE_ACCOUNT_KEY=your-account-key
CLINICAL_NOTES_AZURE_CONTAINER=clinical-notes

# Google Cloud Storage Configuration (if using GCP)
CLINICAL_NOTES_GCP_PROJECT_ID=your-project-id
CLINICAL_NOTES_GCP_BUCKET=your-bucket-name
CLINICAL_NOTES_GCP_KEY_FILE=./path/to/service-account-key.json

# ================================
# Security Configuration
# ================================

# Virus scanning (ClamAV integration)
CLINICAL_NOTES_VIRUS_SCAN_ENABLED=true
CLINICAL_NOTES_CLAMAV_HOST=localhost
CLINICAL_NOTES_CLAMAV_PORT=3310

# Encryption settings
CLINICAL_NOTES_ENCRYPTION_ENABLED=true
CLINICAL_NOTES_ENCRYPTION_KEY=your-32-character-encryption-key-here
CLINICAL_NOTES_ENCRYPTION_ALGORITHM=aes-256-gcm

# Access control
CLINICAL_NOTES_RBAC_ENABLED=true
CLINICAL_NOTES_AUDIT_LOGGING_ENABLED=true
CLINICAL_NOTES_CONFIDENTIAL_NOTES_ENABLED=true

# ================================
# Performance Configuration
# ================================

# Search configuration
CLINICAL_NOTES_SEARCH_ENABLED=true
CLINICAL_NOTES_SEARCH_INDEX_ENABLED=true
CLINICAL_NOTES_SEARCH_RESULTS_LIMIT=100

# Pagination settings
CLINICAL_NOTES_DEFAULT_PAGE_SIZE=10
CLINICAL_NOTES_MAX_PAGE_SIZE=100

# Caching configuration
CLINICAL_NOTES_CACHE_ENABLED=true
CLINICAL_NOTES_CACHE_TTL=300  # 5 minutes in seconds
CLINICAL_NOTES_CACHE_PREFIX=clinical_notes:

# ================================
# Database Configuration
# ================================

# MongoDB indexes
CLINICAL_NOTES_AUTO_CREATE_INDEXES=true
CLINICAL_NOTES_TEXT_SEARCH_ENABLED=true

# Connection pool settings
CLINICAL_NOTES_DB_POOL_SIZE=10
CLINICAL_NOTES_DB_TIMEOUT=30000  # 30 seconds

# ================================
# API Configuration
# ================================

# Rate limiting
CLINICAL_NOTES_RATE_LIMIT_ENABLED=true
CLINICAL_NOTES_RATE_LIMIT_WINDOW=60000  # 1 minute in milliseconds
CLINICAL_NOTES_RATE_LIMIT_MAX_REQUESTS=100
CLINICAL_NOTES_RATE_LIMIT_SEARCH_MAX=30
CLINICAL_NOTES_RATE_LIMIT_UPLOAD_MAX=10

# API versioning
CLINICAL_NOTES_API_VERSION=v1
CLINICAL_NOTES_API_PREFIX=/api/notes

# ================================
# Logging Configuration
# ================================

# Log levels: error, warn, info, debug
CLINICAL_NOTES_LOG_LEVEL=info
CLINICAL_NOTES_LOG_FILE=./logs/clinical-notes.log
CLINICAL_NOTES_LOG_MAX_SIZE=10m
CLINICAL_NOTES_LOG_MAX_FILES=5

# Audit logging
CLINICAL_NOTES_AUDIT_LOG_ENABLED=true
CLINICAL_NOTES_AUDIT_LOG_FILE=./logs/clinical-notes-audit.log
CLINICAL_NOTES_AUDIT_LOG_RETENTION_DAYS=2555  # 7 years

# ================================
# Integration Configuration
# ================================

# Patient management integration
CLINICAL_NOTES_PATIENT_INTEGRATION_ENABLED=true
CLINICAL_NOTES_AUTO_LINK_MEDICATIONS=true

# Notification settings
CLINICAL_NOTES_NOTIFICATIONS_ENABLED=true
CLINICAL_NOTES_EMAIL_NOTIFICATIONS=true
CLINICAL_NOTES_WEBHOOK_NOTIFICATIONS=false
CLINICAL_NOTES_WEBHOOK_URL=

# ================================
# Development Configuration
# ================================

# Development mode settings
CLINICAL_NOTES_DEV_MODE=false
CLINICAL_NOTES_DEBUG_ENABLED=false
CLINICAL_NOTES_MOCK_DATA_ENABLED=false

# Testing configuration
CLINICAL_NOTES_TEST_MODE=false
CLINICAL_NOTES_TEST_DB_NAME=clinical_notes_test
CLINICAL_NOTES_TEST_CLEANUP_ENABLED=true

# ================================
# Monitoring Configuration
# ================================

# Health checks
CLINICAL_NOTES_HEALTH_CHECK_ENABLED=true
CLINICAL_NOTES_HEALTH_CHECK_INTERVAL=30000  # 30 seconds

# Metrics collection
CLINICAL_NOTES_METRICS_ENABLED=true
CLINICAL_NOTES_METRICS_PREFIX=clinical_notes_

# Performance monitoring
CLINICAL_NOTES_PERFORMANCE_MONITORING=true
CLINICAL_NOTES_SLOW_QUERY_THRESHOLD=1000  # 1 second in milliseconds

# ================================
# Backup Configuration
# ================================

# Automated backups
CLINICAL_NOTES_BACKUP_ENABLED=false
CLINICAL_NOTES_BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
CLINICAL_NOTES_BACKUP_RETENTION_DAYS=30
CLINICAL_NOTES_BACKUP_LOCATION=./backups/clinical-notes

# ================================
# Feature Flags
# ================================

# Experimental features
CLINICAL_NOTES_BULK_OPERATIONS_ENABLED=true
CLINICAL_NOTES_ADVANCED_SEARCH_ENABLED=true
CLINICAL_NOTES_FILE_PREVIEW_ENABLED=true
CLINICAL_NOTES_VOICE_NOTES_ENABLED=false
CLINICAL_NOTES_AI_SUGGESTIONS_ENABLED=false

# ================================
# Compliance Configuration
# ================================

# HIPAA compliance
CLINICAL_NOTES_HIPAA_COMPLIANCE_ENABLED=true
CLINICAL_NOTES_DATA_RETENTION_POLICY_ENABLED=true
CLINICAL_NOTES_DATA_RETENTION_YEARS=7

# GDPR compliance
CLINICAL_NOTES_GDPR_COMPLIANCE_ENABLED=true
CLINICAL_NOTES_RIGHT_TO_ERASURE_ENABLED=true
CLINICAL_NOTES_DATA_PORTABILITY_ENABLED=true

# ================================
# Localization Configuration
# ================================

# Language settings
CLINICAL_NOTES_DEFAULT_LANGUAGE=en
CLINICAL_NOTES_SUPPORTED_LANGUAGES=en,es,fr,de
CLINICAL_NOTES_TIMEZONE=UTC

# Date/time formatting
CLINICAL_NOTES_DATE_FORMAT=YYYY-MM-DD
CLINICAL_NOTES_TIME_FORMAT=HH:mm:ss
CLINICAL_NOTES_DATETIME_FORMAT=YYYY-MM-DD HH:mm:ss