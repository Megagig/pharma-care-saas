{
  "scripts": {
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:unit": "jest --testPathPattern=__tests__/.*\\.test\\.(ts|js)$ --passWithNoTests",
    "test:integration": "jest --testPathPattern=__tests__/integration/.*\\.test\\.(ts|js)$ --passWithNoTests",
    "test:performance": "jest --testPathPattern=__tests__/performance/.*\\.test\\.(ts|js)$ --passWithNoTests",
    "test:e2e": "jest --testPathPattern=__tests__/e2e/.*\\.test\\.(ts|js)$ --passWithNoTests",
    "test:services": "jest --testPathPattern=__tests__/services/.*\\.test\\.(ts|js)$ --passWithNoTests",
    "test:controllers": "jest --testPathPattern=__tests__/controllers/.*\\.test\\.(ts|js)$ --passWithNoTests",
    "test:models": "jest --testPathPattern=__tests__/models/.*\\.test\\.(ts|js)$ --passWithNoTests",
    "test:routes": "jest --testPathPattern=__tests__/routes/.*\\.test\\.(ts|js)$ --passWithNoTests",
    "test:middlewares": "jest --testPathPattern=__tests__/middlewares/.*\\.test\\.(ts|js)$ --passWithNoTests",
    "test:utils": "jest --testPathPattern=__tests__/utils/.*\\.test\\.(ts|js)$ --passWithNoTests",
    "test:security": "jest --testPathPattern=__tests__/security/.*\\.test\\.(ts|js)$ --passWithNoTests",
    "test:database": "jest --testPathPattern=__tests__/database/.*\\.test\\.(ts|js)$ --passWithNoTests",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "test:report": "jest --coverage --coverageReporters=html --coverageReporters=text --passWithNoTests",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --passWithNoTests",
    "test:load": "jest --testPathPattern=__tests__/performance/loadTesting\\.test\\.(ts|js)$ --passWithNoTests",
    "test:memory": "node --expose-gc node_modules/.bin/jest --testPathPattern=__tests__/performance/.*\\.test\\.(ts|js)$ --logHeapUsage --passWithNoTests",
    "test:parallel": "jest --maxWorkers=4 --passWithNoTests",
    "test:serial": "jest --runInBand --passWithNoTests",
    "test:verbose": "jest --verbose --passWithNoTests",
    "test:silent": "jest --silent --passWithNoTests",
    "test:bail": "jest --bail --passWithNoTests",
    "test:changed": "jest --onlyChanged --passWithNoTests",
    "test:related": "jest --findRelatedTests --passWithNoTests",
    "test:update-snapshots": "jest --updateSnapshot --passWithNoTests",
    "test:clear-cache": "jest --clearCache",
    "test:setup": "node src/__tests__/setup/testSetup.js",
    "test:teardown": "node src/__tests__/setup/testTeardown.js",
    "test:seed": "node src/__tests__/setup/seedTestData.js",
    "test:clean": "rimraf coverage test-results junit.xml",
    "pretest": "npm run test:clean",
    "posttest": "npm run test:report"
  }
}