{
  "name": "pharma-care-backend",
  "version": "1.0.0",
  "description": "Backend API for Pharmaceutical Care SaaS application",
  "main": "dist/server.js",
  "scripts": {
    "build": "echo 'Building TypeScript...' && tsc && echo 'Build completed successfully! Check dist/ directory.'",
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:mtr": "ts-node src/__tests__/runTests.ts",
    "seed": "ts-node scripts/seedSubscriptionPlans.ts",
    "seed:plans": "ts-node scripts/seedPlansFromConfig.ts",
    "drop-indexes": "ts-node scripts/dropOldIndexes.ts",
    "clean-db": "ts-node scripts/cleanDatabase.ts",
    "migrate:workspace": "ts-node src/scripts/migrateToWorkspaceSubscriptions.ts",
    "migrate:workspace-subscriptions": "ts-node src/scripts/migrateToWorkspaceSubscriptions.ts",
    "migrate:enhanced": "ts-node src/scripts/enhancedMigration.ts",
    "migrate:cli": "ts-node src/scripts/migrationCLI.ts",
    "validate:migration-integrity": "ts-node src/scripts/validateMigrationIntegrity.ts",
    "test:smoke": "jest --testPathPattern=smoke --verbose",
    "test:e2e:critical": "jest --testPathPattern=e2e/critical --verbose",
    "test:api:health": "jest --testPathPattern=health --verbose",
    "migration:status": "ts-node src/migrations/clinicalInterventionMigrations.ts status",
    "migration:up": "ts-node src/migrations/clinicalInterventionMigrations.ts up",
    "migration:down": "ts-node src/migrations/clinicalInterventionMigrations.ts down",
    "migration:validate": "ts-node src/migrations/clinicalInterventionMigrations.ts validate",
    "migrate:theme-preference": "ts-node src/scripts/themePreferenceMigration.ts up",
    "migrate:theme-preference:status": "ts-node src/scripts/themePreferenceMigration.ts status",
    "migrate:theme-preference:down": "ts-node src/scripts/themePreferenceMigration.ts down",
    "feature-flags:init": "ts-node -e \"require('./src/utils/featureFlags').initializeFeatureFlags()\"",
    "feature-flags:status": "ts-node scripts/featureFlags.ts status",
    "feature-flags:set": "ts-node scripts/featureFlags.ts set",
    "feature-flags:test": "ts-node scripts/featureFlags.ts test",
    "feature-flags:verify-rollout": "ts-node scripts/featureFlags.ts verify-rollout",
    "feature-flags:clear-cache": "ts-node scripts/featureFlags.ts clear-cache",
    "feature-flags:validate": "ts-node scripts/featureFlags.ts validate",
    "performance:init": "ts-node -e \"require('./src/utils/performanceOptimization').initializePerformanceOptimization()\"",
    "performance:check": "ts-node scripts/performanceCheck.ts",
    "performance:validate": "ts-node scripts/validatePerformance.ts",
    "db:health-check": "ts-node scripts/dbHealthCheck.ts",
    "db:optimize-indexes": "ts-node -e \"require('./src/utils/databaseOptimization').initializeDatabaseOptimization()\"",
    "db:performance:check": "ts-node scripts/dbPerformanceCheck.ts",
    "cache:init": "ts-node -e \"require('./src/utils/performanceOptimization').initializeRedisCache()\"",
    "validate-deployment": "ts-node scripts/validateDeployment.ts",
    "deploy": "bash scripts/deploy.sh",
    "deploy:staging": "NODE_ENV=staging bash scripts/deploy.sh",
    "deploy:production": "NODE_ENV=production bash scripts/deploy.sh",
    "migrate:clinical-notes": "ts-node scripts/migrateClinicalNotes.ts",
    "migrate:clinical-notes:status": "ts-node scripts/migrateClinicalNotes.ts -- --status",
    "migrate:clinical-notes:rollback": "ts-node scripts/migrateClinicalNotes.ts -- --rollback"
  },
  "keywords": [
    "pharmacy",
    "healthcare",
    "saas",
    "clinical",
    "medications"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@types/moment": "^2.11.29",
    "@types/node-cron": "^3.0.11",
    "@types/socket.io": "^3.0.1",
    "bcryptjs": "^2.4.3",
    "canvas": "^3.2.0",
    "cloudinary": "^1.40.0",
    "commander": "^14.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.7.0",
    "isomorphic-dompurify": "^2.26.0",
    "jsbarcode": "^3.12.1",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.4",
    "prom-client": "^15.1.3",
    "puppeteer": "^24.20.0",
    "qrcode": "^1.5.4",
    "resend": "^6.0.2",
    "socket.io": "^4.8.1",
    "stripe": "^12.18.0",
    "twilio": "^4.15.0",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "xss-clean": "^0.1.4",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.23",
    "@types/helmet": "^4.0.0",
    "@types/hpp": "^0.2.6",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^29.5.0",
    "@types/jsbarcode": "^3.11.4",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.19.11",
    "@types/nodemailer": "^6.4.19",
    "@types/qrcode": "^1.5.5",
    "@types/supertest": "^6.0.0",
    "@types/validator": "^13.15.2",
    "jest": "^29.6.4",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
