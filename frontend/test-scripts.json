{
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install",
    "test:components": "vitest run --testPathPattern=components/.*\\.test\\.(ts|tsx)$",
    "test:hooks": "vitest run --testPathPattern=hooks/.*\\.test\\.(ts|tsx)$",
    "test:services": "vitest run --testPathPattern=services/.*\\.test\\.(ts|tsx)$",
    "test:utils": "vitest run --testPathPattern=utils/.*\\.test\\.(ts|tsx)$",
    "test:pages": "vitest run --testPathPattern=pages/.*\\.test\\.(ts|tsx)$",
    "test:integration": "vitest run --testPathPattern=integration/.*\\.test\\.(ts|tsx)$",
    "test:visual": "playwright test --grep=\"visual regression\"",
    "test:accessibility": "playwright test --grep=\"accessibility\"",
    "test:mobile": "playwright test --project=\"Mobile Chrome\" --project=\"Mobile Safari\"",
    "test:desktop": "playwright test --project=\"chromium\" --project=\"firefox\" --project=\"webkit\"",
    "test:chrome": "playwright test --project=\"chromium\"",
    "test:firefox": "playwright test --project=\"firefox\"",
    "test:safari": "playwright test --project=\"webkit\"",
    "test:ci": "vitest run --coverage --reporter=junit --reporter=json --reporter=html",
    "test:ci:e2e": "playwright test --reporter=html --reporter=junit --reporter=json",
    "test:report": "vitest run --coverage --reporter=html",
    "test:debug": "vitest --inspect-brk",
    "test:changed": "vitest related",
    "test:update-snapshots": "vitest run --update-snapshots",
    "test:clear-cache": "vitest run --clearCache",
    "test:parallel": "vitest run --threads",
    "test:serial": "vitest run --no-threads",
    "test:verbose": "vitest run --reporter=verbose",
    "test:silent": "vitest run --reporter=basic",
    "test:bail": "vitest run --bail=1",
    "test:performance": "vitest run --testPathPattern=performance/.*\\.test\\.(ts|tsx)$",
    "test:load": "playwright test --grep=\"load testing\"",
    "test:stress": "playwright test --grep=\"stress testing\"",
    "test:setup": "node src/__tests__/setup/testSetup.js",
    "test:teardown": "node src/__tests__/setup/testTeardown.js",
    "test:clean": "rimraf coverage test-results playwright-report",
    "pretest": "npm run test:clean",
    "posttest": "npm run test:report",
    "pretest:e2e": "npm run build",
    "posttest:e2e": "npm run test:e2e:report"
  }
}